#include <stdio.h>
#include <aalib.h>

int main() {
    aa_context *context;
    aa_hardware_params hardware_params;

    // Initialisieren der Hardware-Parameter
    aa_parseoptions(NULL, &hardware_params);
    context = aa_autoinit(&hardware_params);

    if (!context) {
        fprintf(stderr, "Unable to initialize aa-lib.\n");
        return 1;
    }

    // Zeichnen eines einfachen Textes
    aa_puts(context, 0, 0, "Hello, World!");
    aa_flush(context);

    // Warten auf eine Eingabe, um das Programm zu beenden
    getchar();

    // Aufr√§umen und Beenden
    aa_close(context);

    return 0;
}